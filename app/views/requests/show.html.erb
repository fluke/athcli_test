<p id="notice"><%= notice %></p>

<div id="request_modal" class="modal fade">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-body">
        <h4>Uploading the scene.</h4>
      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->

<div class="row">
  <div class="col-md-6">
    <video id="v" controls="" loop=""> 
    	<source src="<%= image_path("video.webm") %>" type="video/webm"> 
    	<source src="<%= image_path("video.ogg") %>" type="video/ogg"> 
    	<source src="<%= image_path("video.mp4") %>" type="video/mp4"> 
    </video> 
    <button id="snap" class="btn btn-success">Take screenshot</button>
  </div>
  <div class="col-md-6">
    <div id="l" class="literally">
    	<canvas id="b"></canvas>
    	<canvas id="c"></canvas>
    </div>
    <form id="<%= IMGUR_CLIENT_ID %>" class="imgur-submit">
        <input type="submit" class="btn btn-submit" id="imgur" value="Save Scene">
        <input class="scene_url" type="hidden">
    </form>
  </div>
</div>


<p>
  <strong>Title:</strong>
  <%= @request.title %>

  <strong>Movie url:</strong>
  <%= @request.movie_url %>

  <strong>User:</strong>
  <%= @request.user_id %>

  <strong>Coach:</strong>
  <%= @request.coach_id %>
</p>

<input class="scene_url form-control" type="text">


<%if user_signed_in? && @request.user == current_user %> 
<%= link_to 'Edit', edit_request_path(@request) %> 
<%end%>